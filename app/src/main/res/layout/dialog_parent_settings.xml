<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_settings_sheet">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_drag_handle" />

        <!-- Header with Wave Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Wave decoration -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_settings_header_wave" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Settings icon with glow -->
                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp">

                    <View
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_settings_icon_glow" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_settings_filled"
                        app:tint="@color/white" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvSettingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Parent Settings"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

                <TextView
                    android:id="@+id/tvSettingsSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Customize your child's reading experience"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </FrameLayout>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- Section 1: Daily Goals (Parent Only) -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

                <LinearLayout
                    android:id="@+id/sectionDailyGoalsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_section_icon_yellow" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="-25dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/star_gold_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Daily Goals"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Daily Points Card (Parent Only) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDailyGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/settings_card_stroke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Points Goal"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="Daily target to earn"
                                    android:textSize="13sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- Value Badge -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:background="@drawable/bg_value_badge"
                                android:gravity="center"
                                android:paddingHorizontal="16dp">

                                <TextView
                                    android:id="@+id/tvDailyTargetValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/accent_yellow"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="pts"
                                    android:textSize="13sp"
                                    android:textColor="@color/text_hint" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Custom Slider -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderDailyTarget"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="8dp"
                                android:valueFrom="10"
                                android:valueTo="500"
                                android:stepSize="10"
                                app:haloColor="@color/slider_halo_yellow"
                                app:thumbColor="@color/accent_yellow"
                                app:thumbRadius="14dp"
                                app:thumbElevation="4dp"
                                app:trackColorActive="@color/accent_yellow"
                                app:trackColorInactive="@color/slider_track_inactive"
                                app:trackHeight="8dp"
                                app:labelBehavior="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- Section 2: Voice & Speed -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_section_icon_teal" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="-25dp"
                        android:src="@drawable/ic_voice"
                        app:tint="@color/primary_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Voice &amp; Speed"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Voice & Speed Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/settings_card_stroke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Voice Selector -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reading Voice"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_dropdown_selector">

                            <Spinner
                                android:id="@+id/spinnerVoice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="16dp"
                                android:paddingEnd="48dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@drawable/bg_dropdown_popup" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="@color/primary" />

                        </FrameLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="20dp"
                            android:background="@color/divider" />

                        <!-- Speech Speed Header with Value -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Reading Speed"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                            <!-- Speed Value Badge -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_speed_value_badge"
                                android:gravity="center"
                                android:paddingHorizontal="12dp">

                                <TextView
                                    android:id="@+id/tvSpeedValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.0x"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Slow turtle icon -->
                            <LinearLayout
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/bg_speed_icon"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ¢"
                                    android:textSize="22sp" />

                            </LinearLayout>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderSpeechRate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="12dp"
                                android:valueFrom="0.5"
                                android:valueTo="1.5"
                                android:stepSize="0.1"
                                app:haloColor="@color/slider_halo_teal"
                                app:thumbColor="@color/primary"
                                app:thumbRadius="14dp"
                                app:thumbElevation="4dp"
                                app:trackColorActive="@color/primary"
                                app:trackColorInactive="@color/slider_track_inactive"
                                app:trackHeight="8dp"
                                app:labelBehavior="gone" />

                            <!-- Fast rabbit icon -->
                            <LinearLayout
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/bg_speed_icon"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ‡"
                                    android:textSize="22sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Speed label -->
                        <TextView
                            android:id="@+id/tvSpeedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="Normal"
                            android:textSize="13sp"
                            android:textColor="@color/primary"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- Section 3: Reading Modes (Parent Only) -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

                <LinearLayout
                    android:id="@+id/sectionReadingModesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_section_icon_purple" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="-25dp"
                        android:src="@drawable/ic_mic"
                        app:tint="@color/accent_purple" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Reading Modes"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Reading Modes Card (Parent Only) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReadingModes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/settings_card_stroke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <!-- Collaborative Reading Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_toggle_item_top">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Collaborative Reading"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Child reads the last word of each sentence"
                                    android:textSize="13sp"
                                    android:textColor="@color/text_secondary"
                                    android:lineSpacingExtra="2dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchCollaborative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="56dp"
                                android:minHeight="56dp"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@color/divider" />

                        <!-- Streak Bonuses Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_toggle_item_middle">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Streak Bonuses"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Extra points for consecutive correct answers"
                                    android:textSize="13sp"
                                    android:textColor="@color/text_secondary"
                                    android:lineSpacingExtra="2dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchStreakBonuses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="56dp"
                                android:minHeight="56dp"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@color/divider" />

                        <!-- Auto-advance Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_toggle_item_bottom">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Auto-advance"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Automatically go to next sentence"
                                    android:textSize="13sp"
                                    android:textColor="@color/text_secondary"
                                    android:lineSpacingExtra="2dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchAutoAdvance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="56dp"
                                android:minHeight="56dp"
                                app:thumbTint="@color/switch_thumb_color"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- Section 4: Interface (Parent Only) -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

                <LinearLayout
                    android:id="@+id/sectionInterfaceHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_section_icon_coral" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="-25dp"
                        android:src="@drawable/ic_child"
                        app:tint="@color/secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Interface"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Kid Mode Card - Special highlighted card (Parent Only) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKidMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="@color/kid_mode_card_bg"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/secondary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- Kid illustration -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_kid_mode_icon">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
