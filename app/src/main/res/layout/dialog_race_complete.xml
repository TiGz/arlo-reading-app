<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Confetti overlay -->
    <com.example.arlo.games.ConfettiView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Race Complete Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Race Complete!"
                android:textSize="14sp"
                android:textColor="@color/accent_green"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <!-- Medal Emoji -->
            <TextView
                android:id="@+id/tvMedal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥‡"
                android:textSize="72sp"
                android:layout_marginBottom="8dp" />

            <!-- Position -->
            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Place!"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp" />

            <!-- Celebration Message -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazing race! You're a champion!"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_variant"
                android:layout_marginVertical="8dp" />

            <!-- Races Remaining -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_game_racing"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvRacesRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 2 races left today"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Play Again Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Race Again!"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:backgroundTint="@color/secondary"
                android:layout_marginBottom="8dp" />

            <!-- Back to Reading Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToReading"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Back to Reading"
                android:textSize="14sp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
