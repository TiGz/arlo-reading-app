<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Reading Stats"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Hidden back button for compatibility -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone"
            android:contentDescription="Back" />

        <!-- Period Selector Tabs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tabToday"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Today"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_primary"
                    android:background="@drawable/bg_tab_selected" />

                <TextView
                    android:id="@+id/tab7Days"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7 Days"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tab30Days"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="30 Days"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tabAllTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="All Time"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 7-Day Calendar Strip (clickable days) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeekCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvWeekLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 7 Days"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <!-- Day Circles -->
                <LinearLayout
                    android:id="@+id/weekDaysContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Day 1 -->
                    <LinearLayout
                        android:id="@+id/day1Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day1Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUN"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day1Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="15"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 2 -->
                    <LinearLayout
                        android:id="@+id/day2Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day2Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day2Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="16"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 3 -->
                    <LinearLayout
                        android:id="@+id/day3Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day3Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TUE"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day3Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="17"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 4 -->
                    <LinearLayout
                        android:id="@+id/day4Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day4Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WED"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day4Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="18"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 5 -->
                    <LinearLayout
                        android:id="@+id/day5Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day5Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THU"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day5Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="19"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 6 -->
                    <LinearLayout
                        android:id="@+id/day6Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day6Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FRI"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day6Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="20"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Day 7 (Today) -->
                    <LinearLayout
                        android:id="@+id/day7Container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/day7Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAT"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/day7Circle"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="21"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_day_inactive"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Week Goal Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvWeeklyProgress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3 of 7 days goal met"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvWeeklyStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week 2 streak!"
                        android:textSize="13sp"
                        android:textColor="@color/accent_orange"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Star Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Period Label -->
                <TextView
                    android:id="@+id/tvPeriodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Progress"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <!-- Total Points Display -->
                <TextView
                    android:id="@+id/tvTotalPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Star Breakdown Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Gold Stars -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star_gold" />

                        <TextView
                            android:id="@+id/tvGoldStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/star_gold_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Silver Stars -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star_silver" />

                        <TextView
                            android:id="@+id/tvSilverStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/star_silver_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Bronze Stars -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star_bronze" />

                        <TextView
                            android:id="@+id/tvBronzeStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/star_bronze_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bronze"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Legacy total stars (hidden) -->
                <TextView
                    android:id="@+id/tvTotalStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="0" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Perfect Words Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_fire"
                        app:tint="#FF6B6B" />

                    <TextView
                        android:id="@+id/tvPerfectWords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect Words"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Best Streak Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_fire"
                        app:tint="#FF9800" />

                    <TextView
                        android:id="@+id/tvBestStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Streak"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Reading Time Card (Full Width) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/accent_blue"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReadingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 min"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvReadingTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reading Time"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvSessionCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 sessions"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvTodayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Second Row Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Sentences Read Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_stats"
                        app:tint="@color/teal_primary" />

                    <TextView
                        android:id="@+id/tvSentencesRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sentences Read"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Pages Completed Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_stats"
                        app:tint="@color/accent_purple" />

                    <TextView
                        android:id="@+id/tvPagesCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pages Completed"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Legacy day indicators (hidden, for compatibility) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone">

            <TextView android:id="@+id/dayMon" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/dayTue" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/dayWed" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/dayThu" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/dayFri" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/daySat" android:layout_width="0dp" android:layout_height="0dp" />
            <TextView android:id="@+id/daySun" android:layout_width="0dp" android:layout_height="0dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
