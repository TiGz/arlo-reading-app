<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reader_background"
    tools:context=".UnifiedReaderFragment">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/reader_controls_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back/Home button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back to library"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            android:tooltipText="Back to library"
            app:tint="@color/reader_text_secondary" />

        <!-- Book title and page indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="1"
                android:textColor="@color/reader_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="The Great Gatsby" />

            <TextView
                android:id="@+id/tvPageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/reader_text_secondary"
                android:textSize="12sp"
                tools:text="Page 3 of 12" />

        </LinearLayout>

        <!-- Voice selection button -->
        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change voice"
            android:padding="12dp"
            android:src="@drawable/ic_voice"
            android:tooltipText="Change voice"
            app:tint="@color/primary" />

        <!-- Speed control button -->
        <ImageButton
            android:id="@+id/btnSpeed"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Adjust reading speed"
            android:padding="12dp"
            android:src="@drawable/ic_speed"
            android:tooltipText="Reading speed"
            app:tint="@color/primary" />

        <!-- Auto-advance toggle button -->
        <ImageButton
            android:id="@+id/btnAutoAdvance"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle auto-advance"
            android:padding="12dp"
            android:src="@drawable/ic_repeat"
            android:tooltipText="Auto-advance: ON"
            app:tint="@color/primary" />

        <!-- Collaborative mode toggle button (sentence mode only) -->
        <ImageButton
            android:id="@+id/btnCollaborative"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle collaborative reading"
            android:padding="12dp"
            android:src="@drawable/ic_mic"
            android:tooltipText="Collaborative reading: OFF"
            android:visibility="gone"
            app:tint="@color/primary"
            tools:visibility="visible" />

        <!-- Mode toggle button -->
        <ImageButton
            android:id="@+id/btnModeToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Switch reading mode"
            android:padding="12dp"
            android:src="@drawable/ic_format_size"
            android:tooltipText="Switch to sentence mode"
            app:tint="@color/primary" />

        <!-- Add page button -->
        <ImageButton
            android:id="@+id/btnAddPage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add new page"
            android:padding="12dp"
            android:src="@drawable/ic_camera"
            android:tooltipText="Capture new page"
            app:tint="@color/primary" />

    </LinearLayout>

    <!-- Processing status banner -->
    <LinearLayout
        android:id="@+id/processingBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="visible">

        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:indeterminateTint="@color/warning_text" />

        <TextView
            android:id="@+id/tvProcessingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warning_text"
            android:textSize="13sp"
            tools:text="2 pages processing..." />

    </LinearLayout>

    <!-- ViewFlipper for mode switching -->
    <ViewFlipper
        android:id="@+id/modeFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner">

        <!-- Child 0: Full page mode with ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Child 1: Sentence mode -->
        <ScrollView
            android:id="@+id/sentenceScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvSentence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.4"
                    android:textColor="@color/reader_text_primary"
                    android:textSize="28sp"
                    tools:text="The old man walked slowly down the dusty road." />

                <!-- Collaborative mode indicator -->
                <LinearLayout
                    android:id="@+id/collaborativeIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/ivMicIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_mic"
                        app:tint="@color/primary" />

                    <TextView
                        android:id="@+id/tvCollaborativeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Your turn!" />

                </LinearLayout>

                <!-- Sentence indicator -->
                <TextView
                    android:id="@+id/tvSentenceIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/reader_text_secondary"
                    android:textSize="14sp"
                    tools:text="Sentence 3 of 7" />

            </LinearLayout>

        </ScrollView>

    </ViewFlipper>

    <!-- Page navigation arrows (overlay, for full page mode) -->
    <ImageButton
        android:id="@+id/btnPrevPage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Previous page"
        android:padding="12dp"
        android:src="@drawable/ic_chevron_left"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner"
        app:tint="@color/reader_text_secondary"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnNextPage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Next page"
        android:padding="12dp"
        android:src="@drawable/ic_chevron_right"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner"
        app:tint="@color/reader_text_secondary"
        tools:visibility="visible" />

    <!-- Need More Pages Banner -->
    <LinearLayout
        android:id="@+id/needMorePagesBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan more pages to continue reading"
            android:textColor="@color/warning_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanMorePages"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Pages"
            android:textColor="@color/warning_text" />

    </LinearLayout>

    <!-- Bottom Controls Panel -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/reader_controls_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Previous sentence button (sentence mode only) -->
        <ImageButton
            android:id="@+id/btnPrevSentence"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous sentence"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_left"
            android:visibility="gone"
            app:tint="@color/reader_text_primary"
            tools:visibility="visible" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Play/Pause button -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Play or pause reading"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play"
            app:tint="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Next sentence button (sentence mode only) -->
        <ImageButton
            android:id="@+id/btnNextSentence"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next sentence"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right"
            android:visibility="gone"
            app:tint="@color/reader_text_primary"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Empty state (no pages yet) -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:alpha="0.4"
            android:contentDescription="No pages"
            android:src="@drawable/ic_book"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:text="No pages yet"
            android:textColor="@color/reader_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Capture your first page to\nstart reading"
            android:textColor="@color/reader_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCaptureFirst"
            style="@style/ArloButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Capture First Page"
            app:icon="@drawable/ic_camera" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
