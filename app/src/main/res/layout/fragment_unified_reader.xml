<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reader_background"
    tools:context=".UnifiedReaderFragment">

    <!-- Top Navigation Bar - Teal Accent -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back to library"
            android:padding="14dp"
            android:src="@drawable/ic_arrow_back"
            android:tooltipText="Back to library"
            app:tint="@color/primary" />

        <!-- Book title and page indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="The Great Gatsby" />

            <TextView
                android:id="@+id/tvPageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/primary"
                android:textSize="13sp"
                tools:text="Page 3 of 12" />

        </LinearLayout>

        <!-- Voice selection button -->
        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change voice"
            android:padding="12dp"
            android:src="@drawable/ic_speaker"
            android:tooltipText="Change voice"
            app:tint="@color/primary" />

        <!-- Speed control button -->
        <ImageButton
            android:id="@+id/btnSpeed"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Adjust reading speed"
            android:padding="12dp"
            android:src="@drawable/ic_speed"
            android:tooltipText="Reading speed"
            app:tint="@color/primary" />

        <!-- Auto-advance toggle button -->
        <ImageButton
            android:id="@+id/btnAutoAdvance"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle auto-advance"
            android:padding="12dp"
            android:src="@drawable/ic_repeat"
            android:tooltipText="Auto-advance: ON"
            app:tint="@color/primary" />

        <!-- Collaborative mode toggle - Purple accent -->
        <ImageButton
            android:id="@+id/btnCollaborative"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle collaborative reading"
            android:padding="12dp"
            android:src="@drawable/ic_mic"
            android:tooltipText="Collaborative reading: OFF"
            app:tint="@color/accent_purple" />

        <!-- Add page button -->
        <ImageButton
            android:id="@+id/btnAddPage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add new page"
            android:padding="12dp"
            android:src="@drawable/ic_camera"
            android:tooltipText="Capture new page"
            app:tint="@color/primary" />

    </LinearLayout>

    <!-- Processing status banner - Info style -->
    <LinearLayout
        android:id="@+id/processingBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_collaborative_indicator"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="visible">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:indeterminateTint="@color/primary" />

        <TextView
            android:id="@+id/tvProcessingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary"
            android:textSize="14sp"
            tools:text="2 pages processing..." />

    </LinearLayout>

    <!-- Sentence reading area -->
    <ScrollView
        android:id="@+id/sentenceScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Main reading text - Large serif for literacy -->
            <TextView
                android:id="@+id/tvSentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/text_primary"
                android:textSize="30sp"
                tools:text="The old man walked slowly down the dusty road." />

            <!-- Collaborative mode indicator - Purple themed -->
            <LinearLayout
                android:id="@+id/collaborativeIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_collaborative_indicator"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMicIndicator"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_mic"
                        app:tint="@color/accent_purple" />

                    <TextView
                        android:id="@+id/tvCollaborativeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/accent_purple"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Your turn!" />

                </LinearLayout>

                <!-- Mic level indicator -->
                <ProgressBar
                    android:id="@+id/micLevelIndicator"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/accent_purple"
                    android:visibility="gone"
                    tools:progress="50"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Sentence indicator -->
            <TextView
                android:id="@+id/tvSentenceIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                tools:text="Sentence 3 of 7" />

        </LinearLayout>

    </ScrollView>

    <!-- Need More Pages Banner -->
    <LinearLayout
        android:id="@+id/needMorePagesBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_collaborative_indicator"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Scan more pages to continue reading"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanMorePages"
            style="@style/ArloButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add Pages"
            app:icon="@drawable/ic_camera" />

    </LinearLayout>

    <!-- Bottom Controls Panel - Large friendly buttons -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reader_controls"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Previous sentence button - Large touch target -->
        <ImageButton
            android:id="@+id/btnPrevSentence"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Previous sentence"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Play/Pause button - Extra large coral button -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Play or pause reading"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play"
            app:tint="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Next sentence button - Large touch target -->
        <ImageButton
            android:id="@+id/btnNextSentence"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Next sentence"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="No pages"
            android:src="@drawable/ic_book"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="No pages yet"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Capture your first page to\nstart reading"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCaptureFirst"
            style="@style/ArloButton.Coral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Capture First Page"
            app:icon="@drawable/ic_camera" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
