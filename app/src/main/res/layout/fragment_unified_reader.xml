<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reader_background"
    tools:context=".UnifiedReaderFragment">

    <!-- Top Navigation Bar - Redesigned with Gamification -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Row 1: Back, Title, Score, Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingTop="6dp">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back to library"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                android:tooltipText="Back to library"
                app:tint="@color/primary" />

            <!-- Book title section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="The Skandar Series" />

                <!-- Chapter title (visible when available) -->
                <TextView
                    android:id="@+id/tvChapterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="@color/accent_purple"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Chapter 3: The Eyrie"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Score Display - Multi-star with streak indicator -->
            <LinearLayout
                android:id="@+id/scoreContainer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_score_pill"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <!-- Gold star + count -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="Gold stars"
                    android:src="@drawable/ic_star_gold" />

                <TextView
                    android:id="@+id/tvGoldStarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/star_gold_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <!-- Silver star + count -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:contentDescription="Silver stars"
                    android:src="@drawable/ic_star_silver" />

                <TextView
                    android:id="@+id/tvSilverStarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/star_silver_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="3" />

                <!-- Bronze star + count -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:contentDescription="Bronze stars"
                    android:src="@drawable/ic_star_bronze" />

                <TextView
                    android:id="@+id/tvBronzeStarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/star_bronze_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="8" />

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/divider" />

                <!-- Streak fire (visible when on a streak) -->
                <ImageView
                    android:id="@+id/ivStreakFire"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="On a streak!"
                    android:src="@drawable/ic_fire"
                    android:visibility="gone"
                    app:tint="@color/secondary"
                    tools:visibility="visible" />

                <!-- Streak count -->
                <TextView
                    android:id="@+id/tvStreakCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/secondary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="x5"
                    tools:visibility="visible" />

                <!-- Legacy star count (hidden, for backwards compatibility) -->
                <TextView
                    android:id="@+id/tvStarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="127" />

            </LinearLayout>

            <!-- Missed stars button (shows when there are skipped sentences) -->
            <FrameLayout
                android:id="@+id/missedStarsContainer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageButton
                    android:id="@+id/btnMissedStars"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="View missed stars"
                    android:padding="10dp"
                    android:src="@drawable/ic_star_outline"
                    android:tooltipText="Missed stars - tap to retry"
                    app:tint="@color/star_gold" />

                <!-- Count badge -->
                <TextView
                    android:id="@+id/tvMissedStarsCount"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_badge_count"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="3" />

            </FrameLayout>

            <!-- Games button (shows available races) -->
            <FrameLayout
                android:id="@+id/gamesContainer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageButton
                    android:id="@+id/btnGames"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play racing games"
                    android:padding="10dp"
                    android:src="@drawable/ic_steering_wheel"
                    android:tooltipText="Race rewards - tap to play"
                    app:tint="@color/secondary" />

                <!-- Count badge -->
                <TextView
                    android:id="@+id/tvGamesCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/bg_badge_count_coral"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="3" />

            </FrameLayout>

            <!-- Settings overflow menu -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Reading settings"
                android:padding="10dp"
                android:src="@drawable/ic_settings"
                android:tooltipText="Settings"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- Row 2: Toggleable Reading Progress Bar -->
        <FrameLayout
            android:id="@+id/readingProgressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_progress_bar_container"
            android:paddingHorizontal="14dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Mode dots (vertical pair) -->
                <LinearLayout
                    android:id="@+id/modeDotsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/dotPageMode"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/bg_mode_dot_teal" />

                    <Space
                        android:layout_width="3dp"
                        android:layout_height="3dp" />

                    <View
                        android:id="@+id/dotSentenceMode"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/bg_mode_dot_inactive" />

                </LinearLayout>

                <!-- Mode label -->
                <TextView
                    android:id="@+id/tvProgressModeLabel"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="PAGE"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_dark"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- Progress bar -->
                <ProgressBar
                    android:id="@+id/readingProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="25"
                    android:progressDrawable="@drawable/bg_reading_progress_teal" />

                <!-- Numeric label -->
                <TextView
                    android:id="@+id/tvProgressNumeric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="3 / 12" />

            </LinearLayout>

        </FrameLayout>

        <!-- Row 3: Daily Progress Bar + Add Page Button -->
        <LinearLayout
            android:id="@+id/dailyProgressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="56dp"
            android:paddingTop="6dp"
            android:paddingEnd="16dp">

            <!-- Daily progress bar with target marker -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/dailyProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/bg_daily_progress" />

                <!-- Target marker - shows where goal was when user exceeds it -->
                <View
                    android:id="@+id/targetMarker"
                    android:layout_width="3dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-2dp"
                    android:background="@color/success"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvDailyProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="65/100 pts" />

            <!-- Add page button -->
            <ImageButton
                android:id="@+id/btnAddPage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add new page"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                android:tooltipText="Capture new page"
                app:tint="@color/primary" />

        </LinearLayout>

        <!-- Hidden collaborative button (moved to parent settings) -->
        <ImageButton
            android:id="@+id/btnCollaborative"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Hidden buttons for settings popup (voice, speed, auto-advance) -->
    <ImageButton
        android:id="@+id/btnVoice"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSpeed"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAutoAdvance"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Processing status banner - Info style -->
    <LinearLayout
        android:id="@+id/processingBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_collaborative_indicator"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="visible">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:indeterminateTint="@color/primary" />

        <TextView
            android:id="@+id/tvProcessingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary"
            android:textSize="14sp"
            tools:text="2 pages processing..." />

    </LinearLayout>

    <!-- Sentence reading area -->
    <ScrollView
        android:id="@+id/sentenceScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/collaborativeFeedbackSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Main reading text - Animated word-by-word display -->
            <com.example.arlo.ui.AnimatedSentenceView
                android:id="@+id/animatedSentenceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </ScrollView>

    <!-- Audio Loading Indicator - Vibrant "Warming Up Voice" Animation -->
    <LinearLayout
        android:id="@+id/audioLoadingIndicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_audio_loading_card"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingVertical="28dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/collaborativeFeedbackSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processingBanner"
        tools:visibility="visible">

        <!-- Speech bubble icon with bounce -->
        <ImageView
            android:id="@+id/ivSpeechBubble"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_speech_bubble"
            android:contentDescription="Voice loading" />

        <!-- Sound Wave Equalizer Bars -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/soundBar1"
                android:layout_width="8dp"
                android:layout_height="24dp"
                android:background="@drawable/sound_wave_bar" />

            <View
                android:id="@+id/soundBar2"
                android:layout_width="8dp"
                android:layout_height="32dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/sound_wave_bar" />

            <View
                android:id="@+id/soundBar3"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/sound_wave_bar" />

            <View
                android:id="@+id/soundBar4"
                android:layout_width="8dp"
                android:layout_height="32dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/sound_wave_bar" />

            <View
                android:id="@+id/soundBar5"
                android:layout_width="8dp"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/sound_wave_bar" />

        </LinearLayout>

        <!-- Friendly rotating message -->
        <TextView
            android:id="@+id/tvLoadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Warming up my voice..."
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Reassuring sub-message -->
        <TextView
            android:id="@+id/tvLoadingSubMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Almost ready to read!"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Need More Pages Banner -->
    <LinearLayout
        android:id="@+id/needMorePagesBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_collaborative_indicator"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/collaborativeFeedbackPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Scan more pages to continue reading"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanMorePages"
            style="@style/ArloButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add Pages"
            app:icon="@drawable/ic_camera" />

    </LinearLayout>

    <!-- Reserved space for collaborative feedback - always present to prevent layout shift -->
    <Space
        android:id="@+id/collaborativeFeedbackSpace"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Collaborative Feedback Panel - Overlays the reserved space -->
    <LinearLayout
        android:id="@+id/collaborativeFeedbackPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_collaborative_panel"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <!-- Top row: Mic icon + Status text + Attempt dots -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Mic icon -->
            <ImageView
                android:id="@+id/ivMicIndicator"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_mic"
                app:tint="@color/collab_idle_text" />

            <!-- Status text -->
            <TextView
                android:id="@+id/tvCollaborativeStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/collab_idle_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Your turn!" />

            <!-- Attempt dots container -->
            <LinearLayout
                android:id="@+id/attemptDotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:id="@+id/attemptDot1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_attempt_dot_active" />

                <View
                    android:id="@+id/attemptDot2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_attempt_dot_inactive" />

                <View
                    android:id="@+id/attemptDot3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_attempt_dot_inactive" />

            </LinearLayout>

        </LinearLayout>

        <!-- Voice wave visualization -->
        <com.example.arlo.ui.VoiceWaveView
            android:id="@+id/voiceWaveView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- Bottom Controls Panel - Large friendly buttons -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reader_controls"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Previous sentence button - Large touch target -->
        <ImageButton
            android:id="@+id/btnPrevSentence"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Previous sentence"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Play/Pause button - Extra large coral button -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Play or pause reading"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play"
            app:tint="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Next sentence button - Large touch target -->
        <ImageButton
            android:id="@+id/btnNextSentence"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_play_button"
            android:contentDescription="Next sentence"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        tools:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="No pages"
            android:src="@drawable/ic_book"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="No pages yet"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Capture your first page to\nstart reading"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCaptureFirst"
            style="@style/ArloButton.Coral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Capture First Page"
            app:icon="@drawable/ic_camera" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
