<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_checklist_item"
    android:layout_marginBottom="8dp">

    <!-- Check Icon -->
    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="top"
        android:src="@drawable/ic_circle_outline"
        android:contentDescription="Status" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            tools:text="Install Google App" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            tools:text="The Google app provides speech recognition on Fire tablets." />

        <!-- ADB Command (for developers) -->
        <TextView
            android:id="@+id/adbCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_tertiary"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:text="adb shell pm grant..." />

        <!-- Help Button -->
        <Button
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:minHeight="32dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
