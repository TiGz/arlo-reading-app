<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Warm Literary -->
    <style name="Base.Theme.ArloReadingApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- FAB -->
        <item name="floatingActionButtonStyle">@style/ArloFabStyle</item>
    </style>

    <style name="Theme.ArloReadingApp" parent="Base.Theme.ArloReadingApp" />

    <!-- FAB Style -->
    <style name="ArloFabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Card Style for Books -->
    <style name="ArloBookCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Text Styles -->
    <style name="ArloTextAppearance.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArloTextAppearance.Header" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ArloTextAppearance.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="ArloTextAppearance.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="ArloButton.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ArloButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ArloButton.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/text_secondary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Reader Controls Button -->
    <style name="ArloReaderControl" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="backgroundTint">@color/surface</item>
        <item name="iconTint">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
